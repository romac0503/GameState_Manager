	background-top-left-image: 		button_active.png 0px  0px 20px 20px;
	background-top-image: 			button_active.png repeat-truncate  20px  0px 42px 20px;
	background-top-right-image: 	button_active.png 42px  0px 72px 20px;
	background-left-image: 			button_active.png repeat-truncate 0px 20px 20px 50px;
	background-center-image: 		button_active.png repeat-truncate 20px 20px 52px 50px;
	background-right-image: 		button_active.png repeat-truncate 42px 20px 72px 50px;
	background-bottom-left-image:	button_active.png   0px 50px 20px 70px;
	background-bottom-image: 		button_active.png repeat-truncate 20px 50px 62px 70px;
	background-bottom-right-image: 	button_active.png  52px 50px 72px 70px;
}

.button:active:hover {
	background-decorator: tiled-box;
	background-top-left-image: 		button_active_hover.png 0px  0px 20px 20px;
	background-top-image: 			button_active_hover.png repeat-truncate  20px  0px 42px 20px;
	background-top-right-image: 	button_active_hover.png 42px  0px 72px 20px;
	background-left-image: 			button_active_hover.png repeat-truncate 0px 20px 20px 50px;
	background-center-image: 		button_active_hover.png repeat-truncate 20px 20px 52px 50px;
